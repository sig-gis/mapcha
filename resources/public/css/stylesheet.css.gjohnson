/********************/
/* Universal Styles */
/********************/

body {
    font-family:Arial;
    font-size:16px;
}

header, nav, section, footer {
    display:block;
}

header {
    position:relative;
    height:2.4rem;
    color:#eee;
    background-color:#1a1a1a;
}

header a:link,
header a:visited,
header a:active,
footer a:link,
footer a:visited,
footer a:active {
    color:#eee;
    text-decoration:none;
}

header a:hover,
footer a:hover {
    color:#999;
}

header a.active-link {
    color:#999;
}

header h1 {
    position:absolute;
    top:0rem;
    left:2rem;
    padding:0.4rem;
    font-size:1.4rem;
    font-weight:bold;
}

nav {
    position:absolute;
    top:0rem;
    left:14rem;
    height:2.4rem;
}

nav ul {
    padding:0.7rem;
    font-size:0.9rem;
}

nav ul li {
    display:inline;
    list-style-type:none;
    padding:0.4rem;
}

#login-info {
    position:absolute;
    top:0rem;
    right:2rem;
    padding:0.7rem 0.6rem;
    font-size:0.8rem;
}

#login-info a {
    margin-left:0.7rem;
    padding:0.4rem;
    border:1px solid #999;
    border-radius:0.7rem;
}

#content {
    padding:1rem 2.4rem;
}

footer {
    height:2.4rem;
    color:#eee;
    background-color:#1a1a1a;
}

footer p {
    padding:0.8rem 2.4rem;
    font-size:0.9rem;
}

h1,h2,h3,h4,h5,h6 {
    color:#55f;
}

/********/
/* Home */
/********/

#home-top {
    position:relative;
    height:22rem;
}

#left-block {
    position:absolute;
    top:3rem;
    left:4rem;
    border:1px solid blue;
    border-radius:1rem;
    background-color:rgba(255,255,255,0.8);
}

#left-block h1 {
    font-size:2rem;
    font-weight:bold;
    width:32rem;
    padding:0.5rem 0.5rem 0.5rem 1rem;
}

#left-block h2 {
    font-size:1rem;
    font-style:italic;
    width:32rem;
    padding:0.5rem 0.5rem 0.75rem 1rem;
}

#right-block {
    position:absolute;
    top:1rem;
    right:0rem;
    height:20rem;
    width:17rem;
}

#right-block input:not(.button) {
    width:15rem;
    margin:0.3rem;
    border:1px solid #999;
    border-radius:0.25rem;
}

#right-block input:not(.button):focus {
    border:1px solid #55f;
    box-shadow:0rem 0rem 0.5rem rgba(21,21,153,0.8);
}

#right-block input.button {
    width:15rem;
    margin:0.3rem;
    padding:0.3rem;
    color:white;
    background-color:#55f;
    border-radius:1rem;
    box-shadow:0.25rem 0.25rem 0.5rem rgba(21,21,153,0.6);
}

#right-block input.button:focus {
    border:1px solid #999;
}

#login {
    width:16rem;
    padding:0.5rem;
    background-color:#e0e0e0;
    border-radius:1rem;
}

#login p#forgot-password a {
    font-size:0.8rem;
    font-weight:bold;
    font-style:italic;
    margin-left:0.25rem;
}

#login p#forgot-password a {
    color:#009;
    text-decoration:none;
}

#register {
    margin-top:1rem;
    width:16rem;
    padding:0.5rem;
    background-color:#e0e0e0;
    border-radius:1rem;
}

#register h3 {
    font-size:1.1rem;
    font-weight:bold;
    padding:0.3rem;
}

#home-content p {
    margin:1rem 0rem;
    display:none;
}

.trademark {
    font-style:italic;
}

#overview-map {
    position:absolute;
    top:1rem;
    left:0rem;
    height:20rem;
    width:60rem;
    border:1px solid #55f;
}

#overview-map ul {
    list-style-type:none;
    font-size:1rem;
    color:#55f;
}

#overview-map .popup-label {
    font-weight:bold;
}

.ol-popup {
    position:absolute;
    bottom:1rem;
    left:-3rem;
    min-width:10rem;
    padding:1rem;
    border-radius:1rem;
    border:1px solid #cccccc;
    background-color:white;
    -webkit-filter:drop-shadow(0 1px 4px rgba(0,0,0,0.2));
    filter:drop-shadow(0 1px 4px rgba(0,0,0,0.2));
}

.ol-popup:after,.ol-popup:before {
    position:absolute;
    top:100%;
    height:0rem;
    width:0rem;
    border:solid transparent;
    content:" ";
    pointer-events:none;
}

.ol-popup:after {
    border-top-color:white;
    border-width:1rem;
    left:3rem;
    margin-left:-1rem;
}

.ol-popup:before {
    border-top-color:#cccccc;
    border-width:1rem;
    left:3rem;
    margin-left:-1rem;
}

