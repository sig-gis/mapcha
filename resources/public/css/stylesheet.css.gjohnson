/*************/
/* Dashboard */
/*************/

#dashboard {
    position:relative;
    padding:1rem;
    background-color:#e0e0e0;
    border-radius:1rem;
}

#dashboard h1 {
    font-size:1.5rem;
    font-weight:bold;
}

#dashboard input#quit-button {
    position:absolute;
    top:0rem;
    right:2rem;
}

#dashboard #image-analysis-pane {
    float:left;
    margin-top:1rem;
    width:59.5rem;
    height:34rem;
    border:2px solid #55f;
}

#dashboard .ol-dragbox {
    background-color:rgba(255,255,255,0.4);
    border-color:rgba(100,150,0,1);
}

#dashboard #sidebar {
    float:right;
    margin-top:1rem;
    width:15rem;
    padding:0.5rem 0.75rem;
    background-color:#eee;
    border:2px solid #55f;
    border-radius:1rem;
}

#dashboard fieldset {
    padding:0.5rem;
    margin-bottom:1rem;
    border:1px solid #55f;
}

#dashboard legend {
    font-size:1.2rem;
    font-weight:bold;
    color:#55f;
}

#dashboard select {
    display:block;
    height:2.5rem;
    width:100%;
    padding:0.5rem;
    color:#55f;
    border:1px solid #55f;
}

#dashboard option {
    color:#55f;
}

#dashboard input.button {
    display:block;
    padding:0.5rem;
    margin:0.5rem auto 0rem auto;
    color:white;
    background-color:#55f;
    border-radius:0.5rem;
    box-shadow:0.25rem 0.25rem 0.5rem rgba(21,21,153,0.6);
}

#dashboard ul {
    width:13rem;
    margin:auto;
    list-style-type:none;
}

#dashboard ul li input {
    height:2rem;
    width:13rem;
    color:#55f;
    border:1px solid #999;
    border-radius:0.5rem;
}

#dashboard p#imagery-info {
    float:left;
    padding:1rem 1rem 0rem 1rem;
    color:#55f;
}

#dashboard #page-stretcher {
    clear:both;
}

/*********/
/* Admin */
/*********/

#admin {
    position:relative;
    padding:1rem;
    background-color:#e0e0e0;
    border-radius:1rem;
}

#admin h1 {
    font-size:1.5rem;
    font-weight:bold;
}

#admin #project-selection {
    position:absolute;
    top:0.75rem;
    left:18rem;
    width:25rem;
}

#admin #project-selection label {
    font-size:1.2rem;
    margin-right:0.5rem;
}

#admin #project-selection select {
    height:2.5rem;
    width:13rem;
    padding:0.5rem;
    color:#55f;
    border:1px solid #55f;
}

#admin #project-selection option {
    color:#55f;
}

#admin input#download-plot-data {
    position:absolute;
    top:0.9rem;
    left:45rem;
    padding:0.25rem;
    color:white;
    background-color:#55f;
    border-radius:0.5rem;
    box-shadow:0.25rem 0.25rem 0.5rem rgba(21,21,153,0.6);
}

#admin legend {
    font-size:1.2rem;
    font-weight:bold;
    color:#55f;
}

#admin label {
    font-weight:bold;
    color:#55f;
    margin-right:1rem;
}

#admin input[type=number], #admin input[type=text] {
    height:1rem;
    padding:0.3rem;
}

#admin fieldset {
    padding:1rem;
    background-color:#eee;
    border:1px solid #55f;
}

#admin fieldset#project-info {
    float:left;
    margin-top:1.2rem;
    margin-right:8rem;
    width:21.5rem;
    height:8rem;
}

#admin fieldset#project-info table {
    height:7.5rem;
}

#admin fieldset#project-info input[type=text] {
    width:13rem;
}

#admin fieldset#project-info textarea {
    height:4rem;
    width:13rem;
    padding:0.3rem;
}

#admin fieldset#plot-info {
    float:left;
    margin-top:1.2rem;
    margin-right:8rem;
    width:17rem;
    height:8rem;
}

#admin fieldset#plot-info table {
    height:7.5rem;
}

#admin fieldset#plot-info input {
    width:5rem;
}

#admin fieldset#bounding-box {
    float:left;
    margin-top:1.2rem;
    width:16rem;
    height:8rem;
}

#admin fieldset#bounding-box input {
    display:block;
    width:5rem;
}

#admin fieldset#bounding-box input#lat-max {
    margin:0rem auto 0.25rem auto;
}

#admin fieldset#bounding-box input#lon-min {
    margin:0.25rem 0rem;
    float:left;
}

#admin fieldset#bounding-box input#lon-max {
    margin:0.25rem 0rem;
    float:right;
}

#admin fieldset#bounding-box input#lat-min {
    margin:0.25rem auto;
}

#admin fieldset#sample-info {
    clear:left;
    float:left;
    margin-top:1rem;
    width:40.75rem;
}

#admin fieldset#sample-info th {
    font-weight:bold;
    color:#55f;
    text-align:center;
    padding:0.25rem;
    background-color:#aaa;
    border:1px solid #55f;
}

#admin fieldset#sample-info th.empty {
    background-color:#eee;
    border:0px;
}

#admin fieldset#sample-info td {
    text-align:center;
    padding:0.25rem;
}

#admin fieldset#sample-info .circle {
    width:1rem;
    height:1rem;
    border-radius:0.5rem;
    margin:0rem auto;
}

#admin fieldset#sample-info input#value-name {
    width:10rem;
}

#admin fieldset#sample-info input#value-color {
    margin:0rem 1rem;
    height:1.5rem;
}

#admin fieldset#sample-info input.button {
    padding:0.25rem;
    color:white;
    min-width:2rem;
    background-color:#55f;
    border-radius:0.5rem;
    box-shadow:0.25rem 0.25rem 0.5rem rgba(21,21,153,0.6);
}

#admin input.button[name=add-sample-value] {
    margin:0.5rem;
}

#admin #new-project-map {
    float:right;
    margin-top:1.5rem;
    width:33.5rem;
    height:21rem;
    border:1px solid #55f;
}

#admin #page-stretcher {
    clear:both;
}

#admin input.button[name=create-project] {
    position:absolute;
    top:0.5rem;
    right:5rem;
    width:17rem;
    display:block;
    font-size:1.1rem;
    padding:0.5rem;
    color:white;
    background-color:#55f;
    border-radius:1rem;
    box-shadow:0.25rem 0.25rem 0.5rem rgba(21,21,153,0.6);
}

#admin #spinner {
    position:absolute;
    top:0.6rem;
    right:2rem;
    width:2rem;
    height:2rem;
    border-radius:1rem;
    border-bottom:0.25rem solid #55f;
    -webkit-animation:sweep 1s infinite linear;
    visibility:hidden;
}
@-webkit-keyframes sweep { to { -webkit-transform: rotate(360deg); } }
